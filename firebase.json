{
  "hosting": [
    {
      "target": "staging",
      "public": "public",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ]
    },
    {
      "target": "production",
      "public": "public",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ]
    },
    {
      "target": "demo",
      "public": "plugin/public",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ]
    },
    {
      "target": "cdn",
      "public": "cdn",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "redirects": [
        {
          "source": "*",
          "destination": "https://fusefonts.com",
          "type": 301
        }
      ],
      "headers": [
        {
          // Specifies a CORS header for all font files
          "source": "**/*.@(mp4)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "only-if-cached"
            }
          ]
        }
      ]
    }
  ]
}